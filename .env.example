# ===========================================
# ASTRA BOT - Environment Configuration
# ===========================================
# Single Port Architecture for Pelican Panel Hosting

# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_discord_client_id_here
DISCORD_CLIENT_SECRET=your_discord_client_secret_here
DISCORD_GUILD_ID=your_dev_guild_id_for_testing

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/astra

# Redis Configuration (optional, for caching)
REDIS_URL=redis://localhost:6379

# ===========================================
# SERVER CONFIGURATION
# ===========================================
# Port for the server (Pelican assigns this automatically)
# In production, both API and Dashboard run on the same port
PORT=3001

# Session & Security (generate random strings for production!)
SESSION_SECRET=your_session_secret_here
API_SECRET=your_super_secret_jwt_key_here

# ===========================================
# PRODUCTION URL CONFIGURATION
# ===========================================
# Your public domain (used for OAuth callback and CORS)
# Example: https://astra.novaplex.xyz
DASHBOARD_URL=https://your-domain.com
OAUTH_CALLBACK_URL=https://your-domain.com/api/auth/discord/callback

# ===========================================
# REVERSE PROXY (Nginx/Cloudflare)
# ===========================================
# Set to true when behind a reverse proxy
TRUST_PROXY=true

# Environment (development or production)
NODE_ENV=production

# Logging (debug, info, warn, error)
LOG_LEVEL=info

# ===========================================
# BOT SETTINGS
# ===========================================
BOT_PREFIX=/
BOT_OWNER_ID=your_discord_user_id
BOT_VERSION=2.2.0
BOT_NAME=Astra

# ===========================================
# PUBLIC LINKS (Dynamic - used in commands & dashboard)
# ===========================================
# Discord Support Server
DISCORD_INVITE_CODE=KD84DmNA89
DISCORD_SUPPORT_URL=https://discord.gg/KD84DmNA89

# GitHub Repository
GITHUB_URL=https://github.com/XSaitoKungX/Astra-Bot
GITHUB_REPO=XSaitoKungX/Astra-Bot

# Website / Dashboard
WEBSITE_URL=https://astra.novaplex.xyz
DOCS_URL=https://docs.novaplex.xyz
DASHBOARD_BANNER_URL=https://astra.novaplex.xyz/Astra_Banner.png

# Top.gg (Bot List)
TOPGG_URL=https://top.gg/bot/YOUR_BOT_ID
TOPGG_TOKEN=your_topgg_token_here
TOPGG_WEBHOOK_SECRET=your_topgg_webhook_secret

# Discord.bots.gg (Bot List)
DISCORDBOTS_URL=https://discord.bots.gg/bots/YOUR_BOT_ID

# Bot Invite Link (customize permissions as needed)
# Permissions: 8 = Administrator, or use custom permission integer
BOT_INVITE_URL=https://discord.com/api/oauth2/authorize?client_id=YOUR_CLIENT_ID&permissions=8&scope=bot%20applications.commands

# ===========================================
# SOCIAL LINKS (Optional)
# ===========================================
TWITTER_URL=
YOUTUBE_URL=
PATREON_URL=
KOFI_URL=

# ===========================================
# RUN MODE
# ===========================================
# Options: all, bot, api
# - all: Run both bot and API (recommended for production)
# - bot: Run only the Discord bot
# - api: Run only the API server
RUN_MODE=all
